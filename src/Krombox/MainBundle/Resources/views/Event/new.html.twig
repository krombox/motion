{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block main_content %}

{% block stylesheets %}    
    {{ form_stylesheet(form) }}
    
    <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css" rel="stylesheet" />    
