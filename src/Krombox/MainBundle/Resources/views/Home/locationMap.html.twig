{% extends 'KromboxMainBundle:Layout:layout.html.twig' %}

{% block main_content %}
    <div id="places-wrapper">
        <h2>{% trans %}places{% endtrans %}</h2>
        <div id="places-content" class="row">
            {% for placeCategory in placeCategories %}
                <div class="place-item col-lg-3">
                    <a href="{{ path('places_list', {'city_slug': city.slug, 'category_slug': placeCategory.slug}) }}"><img src="http://lorempixel.com/250/250/food"></a>
                    <h4>{{ placeCategory.name }}</h4><span>{{ macro.facet_item_count(filterFacet,'categories', placeCategory.slug) }}</span>
                </div>
            {% endfor %}            
        </div>
    </div>
    
    <div id="events-wrapper">
        
    </div>
{% endblock %}